{
  "extends": "@tsconfig/node20",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "gen/srv/srv",
    "lib": ["dom", "es2023"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "paths": {
      "#cds-models/*": ["./@cds-models/*/index.ts"]
    }
  },
  "include": ["srv/**/*.ts", "db/**/*.ts", "test/**/*.ts"]
}
